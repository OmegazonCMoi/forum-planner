{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-lg p-8 bg-white rounded-lg shadow-md relative z-50">
            <h1 class="text-2xl font-bold mb-6 text-gray-800">Créer un compte</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div class="mb-4">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.nom, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.nom) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.prenom, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.prenom, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.prenom) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.username, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.username, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.username) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.email, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.email) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.password, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.password, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.password) }}
                <small class="text-gray-600">Le mot de passe doit comporter au moins 8 caractères, dont une lettre majuscule, une minuscule, un chiffre et un caractère spécial.</small>
            </div>

            <div>
                <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Register
                </button>
            </div>

            {{ form_end(form) }}

            <div class="mt-4 text-center">
                <a href="{{ path('app_login') }}" class="text-indigo-600 hover:text-indigo-900">Déjà un compte ? Se connecter</a>
            </div>
        </div>
    </div>
{% endblock %}