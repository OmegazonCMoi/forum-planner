{% extends 'base.html.twig' %}

{% block title %}Code Login{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-lg relative z-50">
            <h1 class="text-2xl font-bold mb-4 text-center">Enter Your Code</h1>
            <img src="{{ qrCodeUrl }}" alt="QR Code" class="mx-auto mb-4">
            <form method="post" action="{{ path('app_code_login') }}">
                <div class="mb-4">
                    <label for="auth_code" class="block text-gray-700">Code</label>
                    <input type="text" id="auth_code" name="auth_code" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div class="flex justify-center">
                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-700 transition duration-300">Submit</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
