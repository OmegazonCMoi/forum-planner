{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md relative z-50">
            <h1 class="text-2xl font-bold mb-6 text-gray-800">Password Reset Email Sent</h1>

            <p class="mb-4 text-gray-700">
                If an account matching your email exists, an email was just sent containing a link to reset your password.
                This link will expire in
                <strong>{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}</strong>.
            </p>

            <p class="text-gray-700">
                If you don't receive an email, please check your spam folder or
                <a href="{{ path('app_forgot_password_request') }}" class="text-indigo-600 hover:text-indigo-900">try again</a>.
            </p>
        </div>
    </div>
{% endblock %}
