{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

<div>
    {{ form_label(form.username, 'Username', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    <div class="mt-1">
        {{ form_widget(form.username, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
    </div>
    {{ form_errors(form.username) }}
</div>

<div>
    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    <div class="mt-1">
        {{ form_widget(form.email, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
    </div>
    {{ form_errors(form.email) }}
</div>

<div>
    {{ form_label(form.password, 'Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    <div class="mt-1">
        {{ form_widget(form.password, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
    </div>
    {{ form_errors(form.password) }}
</div>

<div>
    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        {{ button_label|default('Save') }}
    </button>
</div>

{{ form_end(form) }}
