{% extends 'base.html.twig' %}

{% block title %}User Roles{% endblock %}

{% block body %}
    <div class="p-6 font-sans mt-6">
        <div class="max-w-md mx-auto bg-white shadow-lg rounded-lg overflow-hidden relative z-50 mt-20">
            <div class="relative z-50">
                <div class="p-6 text-center">
                    <h1 class="text-2xl font-bold text-gray-800">Roles for {{ user.username }}</h1>

                    {{ form_start(form) }}
                        <div class="flex flex-col items-center">
                            {% for child in form.roles %}
                                <div class="mb-2">
                                    {{ form_widget(child) }}
                                    {{ form_label(child) }}
                                </div>
                            {% endfor %}
                        </div>
                        <button type="submit" class="mt-4 bg-blue-600 text-white py-2 px-4 rounded-lg shadow hover:bg-blue-700 transition-all duration-200">
                            Update Roles
                        </button>
                    {{ form_end(form) }}
                </div>

                <div class="bg-gray-50 p-4 text-center">
                    <a href="{{ path('app_user_index') }}" class="inline-block mt-4 bg-blue-600 text-white py-2 px-4 rounded-lg shadow hover:bg-blue-700 transition-all duration-200">
                        Back to Users
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}