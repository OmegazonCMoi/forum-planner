{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="container mx-auto py-8">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit User</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.username, 'Username', {'class': 'block text-gray-700 font-medium'}) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(form.username) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.email, 'Email', {'class': 'block text-gray-700 font-medium'}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="mt-4">
                <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700">
                    Save Changes
                </button>
            </div>
            {{ form_end(form) }}
        </div>

        <div class="mt-4">
            <a href="{{ path('app_user_index') }}" class="text-indigo-600 hover:text-indigo-900">
                ‚Üê Back to list
            </a>
        </div>
    </div>
{% endblock %}
